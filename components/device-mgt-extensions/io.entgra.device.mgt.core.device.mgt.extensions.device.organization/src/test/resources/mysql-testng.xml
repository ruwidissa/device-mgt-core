        <parameter name="dbType" value="MySql"/>
        <classes>
            <class name="io.entgra.device.mgt.core.device.mgt.extensions.device.organization.ServiceTest"/>
            <class name="io.entgra.device.mgt.core.device.mgt.extensions.device.organization.ServiceNegativeTest"/>
        </classes>
